{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "declaration": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "downlevelIteration": true,
    "sourceMap": false,
    "lib": [
      "es2017",
      "dom"
    ],
    "outDir": "./lib",
    "removeComments": true,
    "strict": false,
    "experimentalDecorators": true
  },
  "compileOnSave": false,
  "include": [
    "lib"
  ],
  "exclude": [
    "node_modules",
    "**/test/*"
  ]
}

